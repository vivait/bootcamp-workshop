{% extends('::base.html.twig') %}
{% block sectiontitle %}Customer List{% endblock %}
{% block sectionlinks %}
    <a class="btn btn-default" href="{{ path('vivait_crm_homepage') }}">CRM Home</a>
    <a class="btn btn-primary" href="{{ path('vivait_crm_customer_add') }}">Add Customer</a>
{% endblock %}
    {% block section %}
        <table class="table table-bordered table-striped">
            <tr>
                <th>Forename</th>
                <th>Surname</th>
                <th>Action</th>
            </tr>
            {% for customer in customers %}
                <tr>
                    <td>
                        <a href="{{ path('vivait_crm_customer_edit',{'customer':customer.id}) }}">{{ customer.forename }}</a>
                    </td>
                    <td>{{ customer.surname }}</td>
                    <td><a class="btn btn-danger btn-sm" href="{{ path('vivait_crm_customer_delete',{'customer':customer.id}) }}">Delete</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No Records</td>
                </tr>
            {% endfor %}
        </table>
    {% endblock %}