{
    "name": "vivait/bootcamp-workshop",
    "description": "Source code accompanying our Symfony Bootcamp workshop",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Kiel Goodman",
            "email": "kiel@vivait.co.uk"
        },
        {
            "name": "Lewis Wright",
            "email": "lewis@vivait.co.uk"
        }
    ],
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "require": {
        "php": ">=5.4.0",
        "symfony/symfony": "2.4.*",
        "doctrine/orm": "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle": "~1.2",
        "doctrine/migrations": "dev-master",
        "doctrine/doctrine-migrations-bundle": "dev-master",
        "twig/extensions": "1.0.*",
        "symfony/assetic-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~2.3",
        "sensio/framework-extra-bundle": "~3.0",
        "sensio/generator-bundle": "~2.3",
        "incenteev/composer-parameter-handler": "~2.0",
        "mopa/composer-bridge": "dev-master",
        "mopa/bootstrap-bundle": "dev-master",
        "twbs/bootstrap": "v3.0.0",
        "leafo/lessphp": "dev-master#85bd4557920d5f4fcbf41beb621e91b842e3621b",
        "vivait/bootstrap-bundle": "1.1.x-dev",
        "vivait/resolve-entity-bundle": "dev-master",
        "vivait/common": "1.1.x-dev",
        "symfony/intl": "*",
        "knplabs/knp-menu-bundle": "dev-master",
        "knplabs/knp-menu": "dev-master",
        "jms/twig-js-bundle": "dev-master",
        "jms/twig-js": "dev-master",
        "beberlei/DoctrineExtensions": "dev-master",
        "stof/doctrine-extensions-bundle": "1.1.x-dev"
    },
    "require-dev": {
        "phpspec/phpspec": "dev-master",
        "phpunit/phpunit": "3.7.*",
        "hautelook/alice-bundle": "*",
        "behat/behat": "*",
        "behat/mink": "*",
        "behat/mink-extension": "*",
        "behat/symfony2-extension": "*",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*",
        "webfactory/exceptions-bundle": "@stable"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Mopa\\Bundle\\BootstrapBundle\\Composer\\ScriptHandler::postInstallSymlinkTwitterBootstrap"

        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Mopa\\Bundle\\BootstrapBundle\\Composer\\ScriptHandler::postInstallSymlinkTwitterBootstrap"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "symfony-assets-install": "symlink",
        "branch-alias": {
            "dev-master": "2.4-dev"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://repos.vivait.co.uk"
        },
        {
            "type": "vcs",
            "url": "https://github.com/vivait/MopaBootstrapBundle.git"
        }

    ]
}